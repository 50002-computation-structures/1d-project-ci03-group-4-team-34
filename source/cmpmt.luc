module cmpmt (
    input a[32],   // 32-bit input
    input alufn[1], // Control signal: 0 for Bitwise NOT (~), 1 for Two’s Complement (-)
    output m[32]   // 32-bit output
) {
    always {
        if (alufn == 1b0) {  
            m = ~a;  // NOT (~a)
        } else {
            m = -a;  // Two’s Complement (-a)
        }
    }
}
